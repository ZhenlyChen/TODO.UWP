<?xml version="1.0" encoding="utf-8" ?>
<tile>
  <visual>
    <binding template="TileMedium" branding="logo">
      <image placement="background" src="Assets/trianglify.png" />
      <text hint-style="title">title</text>
      <text hint-style="captionSubtle" hint-wrap="true">des</text>
    </binding>

    <binding template="TileWide" branding="nameAndLogo">
      <image placement="background" src="Assets/trianglify.png" />
      <group>
        <subgroup hint-weight="33">
          <image src="Assets/orange.png" />
        </subgroup>
        <subgroup>
          <text hint-style="title">title</text>
          <text hint-style="captionSubtle" hint-wrap="true" hint-maxLines="3">des</text>
          <text hint-style="captionSubtle" hint-maxLines="3">date</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge" hint-textStacking="center" branding="nameAndLogo">
      <image placement="background" src="Assets/trianglify.png" />
      <group>
        <subgroup hint-weight="1"/>
        <subgroup hint-weight="2">
          <image src="Assets/orange.png" hint-crop="circle"/>
        </subgroup>
        <subgroup hint-weight="1"/>
      </group>

      <text hint-style="title" hint-align="center">title</text>
      <text hint-style="captionSubtle" hint-align="center">des</text>
      <text hint-style="captionSubtle" hint-align="center">date</text>

    </binding>

  </visual>
</tile>